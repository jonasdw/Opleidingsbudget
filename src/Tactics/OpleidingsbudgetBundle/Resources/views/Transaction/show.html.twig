{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Transaction</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ entity.amount }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.date|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Expenserequest_id</th>
                <td>{% if entity.type == "expense" %}{{ entity.expenserequest.id }}{% endif %}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ entity.user.id }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
