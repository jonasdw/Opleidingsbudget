{% extends '::base.html.twig' %}

{% block body %}
    <h2>Transactions | current budget: {{ budget|money }} </h2>

    <a href="{{ path('expenserequest_new') }}">
        Make Request
    </a>
    <br /><br />
    <table class="records_list">
        <thead>
            <tr>
                <th>Datum</th>
                <th>Bedrag</th>
                <th>Info</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr class="{{ transaction.type }}">
                <td>{{ transaction.date|date('d-m-Y') }}</td>
                <td>{{ transaction.amount|money }}</td>
                {% if transaction.type == 'expense' %}
                <td><a href="{{ path('expenserequest_show', {'id': transaction.expenserequest.id}) }}">info</a></td>
                {% else %}
                <td>geen extra info</td>
                {% endif %}
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}
