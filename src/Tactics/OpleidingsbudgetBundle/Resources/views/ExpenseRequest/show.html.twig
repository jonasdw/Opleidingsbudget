{% extends '::base.html.twig' %}

{% block body -%}
    <h2>ExpenseRequest</h2>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ entity.amount * -1 }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Date_pending</th>
                <td>{{ entity.datepending|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Date_approved</th>
                <td>{{ entity.dateapproved|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Date_executed</th>
                <td>{{ entity.dateexecuted|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ entity.userid }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('expenserequest') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('expenserequest_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
