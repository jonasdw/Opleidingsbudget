{% extends '::base.html.twig' %}

{% block body -%}
    <h2>ExpenseRequest</h2>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ entity.amount * -1 }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Date_pending</th>
                <td>{{ entity.datepending|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Date_approved</th>
                <td>{% if entity.dateapproved %}{{ entity.dateapproved|date('d-m-Y') }}{% else %}x{% endif %}</td>
            </tr>
            <tr>
                <th>Date_executed</th>
                <td>{% if entity.dateexecuted %}{{ entity.dateexecuted|date('d-m-Y') }}{% else %}x{% endif %}</td>            </tr>
            <tr>
                <th>User_id</th>
                <td>{{ entity.user.firstname }}</td>
            </tr>
        </tbody>
    </table>
{% endblock %}
