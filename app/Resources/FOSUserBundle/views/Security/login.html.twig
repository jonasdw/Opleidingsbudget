{% extends "::base.html.twig" %}

{% block body %}
{% if error %}
    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
<div id="login">
    <form action="{{ path("fos_user_security_check") }}" method="post">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
        <div class="form-group">
            <label for="username">{{ 'email'|trans({}, 'FOSUserBundle') }}</label>
            <input type="text" id="username" class="form-control" name="_username" value="{{ last_username }}" required="required" />
        </div>
        <div class="form-group">
            <label for="password">{{ 'password'|trans({}, 'FOSUserBundle') }}</label>
            <input type="password" id="password" class="form-control" name="_password" required="required" />
        </div>
        <input type="submit" class="btn btn-default" id="_submit" name="_submit" value="{{ 'login'|trans({}, 'FOSUserBundle') }}" />
    </form>
</div>
{% endblock body %}
